@using Etupirka.Domain.Portal.MultiTenancy
@using Etupirka.Domain.Portal.Users
<div>
    <form name="tenantCreateForm" role="form" novalidate class="form-validation form-horizontal">
        <div class="modal-header">
            <h4 class="modal-title">
                <span><strong>创建烟厂信息： </strong></span>
            </h4>
        </div>
        <div class="modal-body">

            <div class="form-group">
                <label class="col-sm-3 control-label">烟厂编号：</label>
                <div class="col-sm-9">
                    <input type="text" name="tenancyName" class="form-control"
                           ng-model="vm.tenant.tenancyName" required maxlength="@SysTenant.MaxTenancyNameLength">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">烟厂名称：</label>
                <div class="col-sm-9">
                    <input type="text" name="name" class="form-control"
                           ng-model="vm.tenant.name" required maxlength="@SysTenant.MaxNameLength">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">管理员Email：</label>
                <div class="col-sm-9">
                    <input type="email" name="name" class="form-control"
                           ng-model="vm.tenant.adminEmailAddress" required maxlength="@SysUser.MaxEmailAddressLength">
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-flat"
                    ng-click="vm.cancel()" ng-disabled="vm.saving">
                <i class="fa fa-fw fa-ban"></i> <span>@L("Cancel")</span>
            </button>
            <button type="submit" button-busy="vm.saving" class="btn btn-primary btn-flat"
                    ng-click="vm.save()" ng-disabled="tenantCreateForm.$invalid">
                <i class="fa fa-fw fa-save"></i> <span>@L("Save")</span>
            </button>
        </div>
    </form>
</div>