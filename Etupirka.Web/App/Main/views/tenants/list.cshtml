
<div class="box box-success none-margin-bottom">
    <div class="box-body">
        <div class="form-inline" enter-key="vm.bindTenants()">
            <div class="row">
                <div class="col-sm-12">
                    <!--Search Header-->
                    <div class="form-group">
                        <label for="txtSearchTenancy" class="form-label">烟厂名称：</label>
                        <input id="txtSearchTenancy" type="text" ng-model="vm.filterText" auto-focus class="form-control form-control-thin" placeholder="烟厂编号或名称" style="width:230px;">
                    </div>
                    <div class="form-group">
                        <label for="txtSearchIsActive" class="form-label">烟厂状态：</label>
                        <select id="txtSearchIsActive" ng-model="vm.filterIsActive" class="form-control form-control-thin"
                                ng-options="item.value as item.name for item in [{name:'全部',value:null},{name:'启用',value:true},{name:'禁用',value:false}]"></select>
                    </div>
                    <div class="form-group">
                        <button id="btnSearch" ng-click="vm.bindTenants()" class="btn bg-tobacco btn-flat btn-from-control-thin margin-left-8">
                            <i class="fa fa-fw fa-search"></i>查询烟厂
                        </button>
                    </div>
                    <div class="form-group">
                        <button id="btnCreateTenant" ng-click="vm.createTenant()" class="btn bg-yellow btn-flat btn-from-control-thin">
                            <i class="fa fa-fw fa-plus"></i>创建烟厂
                        </button>
                    </div>
                    <!--Search Header End-->
                </div>
            </div>
            <div class="row margin-top-5">
                <div class="col-sm-12">
                    <div busy-if="vm.loading">
                        <div ui-grid="vm.tenantGridOptions" ui-grid-pagination @*ui-grid-selection*@ style="width: 860px; height:420px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
