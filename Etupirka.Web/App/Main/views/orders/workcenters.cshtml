
<div class="box box-success none-margin-bottom">
    <div class="box-body">
        <div class="form-inline" enter-key="vm.bindWorkCenters()">
            <div class="row">
                <div class="col-sm-12">
                    <!--Search Header-->
                    <div class="form-group">
                        <select ng-model="vm.filterType" class="form-control form-control-thin"
                                ng-options="item.value as item.name for item in
                                [{name:'工作中心编码',value:'stWorkCenterCode'},
                                {name:'工作中心名称',value:'stWorkCenterName'}]"></select>
                    </div>
                    <div class="form-group">
                        <input type="text" ng-model="vm.filterText" auto-focus class="form-control form-control-thin" placeholder="查询内容" style="width:120px;">
                    </div>
                    <div class="form-group">
                        <button ng-click="vm.bindWorkCenters()" class="btn bg-tobacco btn-flat btn-from-control-thin margin-left-5">
                            <i class="fa fa-fw fa-search"></i> 查询
                        </button>
                        <button ng-click="vm.asyncPrepares()" class="btn btn-default btn-flat btn-from-control-thin">
                            <i class="fa fa-fw fa-reply"></i> 同步测试
                        </button>
                    </div>
                    <!--Search Header End-->
                </div>
            </div>
            <div class="row margin-top-5">
                <div class="col-sm-12">
                    <div busy-if="vm.loading">
                        <div ui-grid="vm.workCenterGridOptions" ui-grid-pagination ui-grid-pinning style="width: 1000px; height:520px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
