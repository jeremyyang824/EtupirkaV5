
<div class="box box-success none-margin-bottom">
    <div class="box-body">
        <div class="form-inline" enter-key="vm.bindTenants()">
            <div class="row">
                <div class="col-sm-12">
                    <!--Search Header-->
                    <div class="form-group">
                        <label for="txtSearchIsActive" class="form-label">通知状态：</label>
                        <select id="txtSearchIsActive" ng-model="vm.readStateFilter" class="form-control form-control-thin" ng-change="vm.bindNotifications()"
                                ng-options="item.value as item.name for item in [{name:'全部',value:null},{name:'未读',value:0},{name:'已读',value:1}]"></select>
                    </div>
                    <div class="form-group">
                        <button id="btnSearch" ng-click="vm.bindNotifications()" class="btn bg-tobacco btn-flat btn-from-control-thin margin-left-8">
                            <i class="fa fa-fw fa-refresh"></i>刷新通知
                        </button>
                        <button id="btnSearch" ng-click="vm.setNotificationsAsRead()" class="btn bg-blue btn-flat btn-from-control-thin margin-left-8">
                            <i class="fa fa-fw fa-check"></i>标为已读
                        </button>
                        <button id="btnSearch" ng-click="vm.deleteNotifications()" class="btn bg-red btn-flat btn-from-control-thin margin-left-8">
                            <i class="fa fa-fw fa-trash"></i>删除选择
                        </button>
                    </div>
                    <!--Search Header End-->
                </div>
            </div>
            <div class="row margin-top-5">
                <div class="col-sm-12">
                    <div busy-if="vm.loading">
                        <div ui-grid="vm.notificationGridOptions" ui-grid-pagination ui-grid-selection style="width: 800px; height:420px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
