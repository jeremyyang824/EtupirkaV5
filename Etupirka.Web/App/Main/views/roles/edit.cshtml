@using Etupirka.Domain.Portal.Authorization.Roles
<div>
    <form name="roleEditForm" role="form" novalidate class="form-validation form-horizontal">
        <div class="modal-header">
            <h4 class="modal-title">
                <span><strong>修改角色信息：</strong></span>
            </h4>
        </div>
        <div class="modal-body">

            <div class="form-group">
                <label class="col-sm-3 control-label">角色名：</label>
                <div class="col-sm-9">
                    <input type="text" name="name" class="form-control"
                           ng-model="vm.role.name" required maxlength="@SysRole.MaxNameLength">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">角色描述：</label>
                <div class="col-sm-9">
                    <input type="text" name="displayName" class="form-control"
                           ng-model="vm.role.displayName" required maxlength="@SysRole.MaxDisplayNameLength">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox" i-check name="isDefault"
                                   ng-model="vm.role.isDefault" /> 默认角色
                        </label>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-flat"
                    ng-click="vm.cancel()" ng-disabled="vm.saving">
                <i class="fa fa-fw fa-ban"></i> <span>@L("Cancel")</span>
            </button>
            <button type="submit" button-busy="vm.saving" class="btn btn-warning btn-flat"
                    ng-click="vm.deleteRole()">
                <i class="fa fa-fw fa-warning"></i> <span>@L("DeletingRole")</span>
            </button>
            <button type="submit" button-busy="vm.saving" class="btn btn-primary btn-flat"
                    ng-click="vm.save()" ng-disabled="roleEditForm.$invalid">
                <i class="fa fa-fw fa-save"></i> <span>@L("Save")</span>
            </button>
        </div>
    </form>
</div>