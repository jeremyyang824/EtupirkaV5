<div>
    <div class="modal-header">
        <button type="button" class="close" aria-label="Close" ng-click="vm.cancel()">
            <span aria-hidden="true">×</span>
        </button>
        <div class="modal-title" style="font-weight: bold; font-size: 16px;">同步SAP订单</div>
    </div>
    <div class="modal-body" busy-if="vm.loading">
        <div class="form-inline" style="margin-left: 5px; margin-right: 5px; margin-bottom:15px;">
            <div class="form-group">
                <label>起始订单号：</label>
                <input type="text" ng-model="vm.orderNumberBegin" auto-focus class="form-control form-control-thin"
                       placeholder="SAP订单号" style="width: 120px;">
            </div>
            <div class="form-group">
                <label>结束订单号：</label>
                <input type="text" ng-model="vm.orderNumberEnd" class="form-control form-control-thin"
                       placeholder="SAP订单号" style="width: 120px;">
            </div>
            <div class="form-group">
                <button ng-click="vm.syncSAPOrder()" class="btn bg-yellow btn-flat btn-from-control-thin margin-left-5">
                    <i class="fa fa-fw fa-refresh"></i> 开始同步
                </button>
            </div>
        </div>
    </div>
</div>
